<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>
	<com.artifex.mupdf.mini.PageView android:id="@+id/page_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#505050"
			android:keepScreenOn="true"
			/>
	<LinearLayout android:id="@+id/action_bar"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:layout_alignParentTop="true"
			android:orientation="horizontal"
			android:background="#303030"
			android:visibility="gone"
			>
		<TextView android:id="@+id/title_label"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_weight="1"
				android:layout_marginLeft="12dp"
				android:textColor="#FFFFFF"
				android:singleLine="true"
				android:ellipsize="end"
				android:textSize="16dp"
				/>
		<Button android:id="@+id/layout_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="@string/button_layout"
				android:visibility="gone"
				/>
		<Button android:id="@+id/outline_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="@string/button_outline"
				android:visibility="gone"
				/>
	</LinearLayout>
	<LinearLayout android:id="@+id/navigation_bar"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:layout_alignParentBottom="true"
			android:orientation="horizontal"
			android:background="#303030"
			android:visibility="gone"
			>
		<SeekBar android:id="@+id/page_seekbar"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_gravity="center"
				android:max="0"
				/>
		<TextView android:id="@+id/page_label"
				android:layout_width="110dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:textColor="#FFFFFF"
				android:singleLine="true"
				android:ellipsize="end"
				android:gravity="right"
				android:textSize="16dp"
				android:padding="8dp"
				android:text="- / -"
				/>
	</LinearLayout>
</RelativeLayout>
